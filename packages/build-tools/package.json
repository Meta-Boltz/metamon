{
  "name": "@mtm/build-tools",
  "version": "1.0.0",
  "description": "Build tools and migration utilities for Ultra-Modern MTM",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "mtm-migrate": "src/migration/cli.js"
  },
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "migrate": "node src/migration/cli.js migrate",
    "check": "node src/migration/cli.js check",
    "analyze": "node src/migration/cli.js analyze",
    "validate": "node src/migration/cli.js validate"
  },
  "keywords": [
    "mtm",
    "migration",
    "build-tools",
    "ultra-modern",
    "ssr",
    "reactive"
  ],
  "author": "MTM Team",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  },
  "files": [
    "src/",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./src/index.js"
    },
    "./migration": {
      "import": "./src/migration/mtm-migrator.js"
    },
    "./compatibility": {
      "import": "./src/migration/backward-compatibility.js"
    },
    "./report": {
      "import": "./src/migration/report-generator.js"
    }
  }
}