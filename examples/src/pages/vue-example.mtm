// Vue example page - Ultra-modern MTM syntax
$pageTitle! = signal('pageTitle', 'Vue Component Integration')
$vueStats! = signal('vueStats', { components: 2, interactions: 0 })
$todos! = signal('todos', [
  { id: 1, text: 'Learn Vue + MTM integration', completed: false },
  { id: 2, text: 'Build reactive components', completed: true }
])

$incrementInteractions = () => {
  $vueStats = { ...$vueStats, interactions: $vueStats.interactions + 1 }
}

$addTodo = (text) => {
  $todos = [...$todos, { id: Date.now(), text, completed: false }]
  $incrementInteractions()
}

