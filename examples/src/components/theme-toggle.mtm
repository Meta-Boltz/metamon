// Pure JS component - no framework extension
export default function ThemeToggle() {
  // Modern MTM syntax with reactive variables
  $theme! = signal('theme', 'light')
  
  $toggleTheme = () => {
    $theme = $theme === 'light' ? 'dark' : 'light'
    signal.emit('theme-changed', { theme: $theme })
    
    // Apply theme to document
    document.documentElement.setAttribute('data-theme', $theme)
  }

  // Initialize theme on load
  document.documentElement.setAttribute('data-theme', $theme)

  <template>
    <div class="theme-toggle">
      <button click={$toggleTheme} class="button theme-button">
        {#if $theme === 'light'}
          🌙 Dark Mode
        {:else}
          ☀️ Light Mode
        {/if}
      </button>
      <span class="theme-indicator">Current: {$theme}</span>
    </div>
  </template>
}