---
layoutName: "main"
function: MainLayout
---

// Main Layout - Ultra-modern MTM syntax
$currentTime! = signal('currentTime', new Date().toLocaleTimeString())

// Update time every second
$updateTime = () => {
  $currentTime = new Date().toLocaleTimeString()
}

// Initialize layout
$init = () => {
  setInterval($updateTime, 1000)
}

<template>
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-200">
      <div class="container mx-auto px-6 py-6">
        <!-- Breadcrumb (if provided by page) -->
        {#if $breadcrumb}
          <nav class="mb-4 text-sm">
            <a href="/" class="text-blue-600 hover:text-blue-800">Home</a>
            <span class="text-gray-400 mx-2">→</span>
            <span class="text-gray-900 font-medium">{$breadcrumb}</span>
          </nav>
        {/if}
        
        <div class="flex items-center justify-between">
          <div class="flex-1">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">{$pageTitle}</h1>
            {#if $pageDescription}
              <p class="text-lg text-gray-600 mb-4">{$pageDescription}</p>
            {/if}
            {#if $frameworkBadge}
              <div class="flex flex-wrap gap-2">
                <span class="inline-block px-3 py-1 {$frameworkBadgeClass} rounded-full text-sm font-medium">
                  {$frameworkIcon} {$frameworkBadge}
                </span>
              </div>
            {/if}
          </div>
          
          <div class="hidden md:block">
            <div class="text-right">
              <div class="text-sm text-gray-500">Current time</div>
              <div class="text-lg font-medium text-gray-900">{$currentTime}</div>
            </div>
          </div>
        </div>
      </div>
    </header>
    
    <!-- Navigation -->
    <nav class="bg-white border-b border-gray-200 sticky top-0 z-10">
      <div class="container mx-auto px-6 py-4">
        <div class="flex flex-wrap gap-2">
          <a href="/" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors">
            🏠 Home
          </a>
          <a href="/about" class="px-4 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 transition-colors">
            📖 About
          </a>
          <a href="/pure-mtm-showcase" class="px-4 py-2 bg-purple-500 text-white rounded-md hover:bg-purple-600 transition-colors">
            🌟 Pure MTM
          </a>
          <a href="/mtm-example" class="px-4 py-2 bg-indigo-500 text-white rounded-md hover:bg-indigo-600 transition-colors">
            🔧 MTM Example
          </a>
          <a href="/react-example" class="px-4 py-2 bg-blue-400 text-white rounded-md hover:bg-blue-500 transition-colors">
            ⚛️ React
          </a>
          <a href="/vue-example" class="px-4 py-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition-colors">
            💚 Vue
          </a>
          <a href="/solid-example" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
            🔷 Solid
          </a>
          <a href="/svelte-example" class="px-4 py-2 bg-orange-500 text-white rounded-md hover:bg-orange-600 transition-colors">
            🧡 Svelte
          </a>
        </div>
      </div>
    </nav>
    
    <!-- Main Content Area -->
    <main class="container mx-auto px-6 py-8">
      <!-- This is where page content will be injected -->
      <slot></slot>
    </main>
    
    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-16">
      <div class="container mx-auto px-6 py-8">
        <div class="text-center">
          <div class="flex flex-wrap justify-center gap-4 mb-4">
            <a href="/" class="text-blue-600 hover:text-blue-800">Home</a>
            <a href="/about" class="text-blue-600 hover:text-blue-800">About</a>
            <a href="/pure-mtm-showcase" class="text-blue-600 hover:text-blue-800">Pure MTM</a>
            <a href="/react-example" class="text-blue-600 hover:text-blue-800">React</a>
            <a href="/vue-example" class="text-blue-600 hover:text-blue-800">Vue</a>
            <a href="/solid-example" class="text-blue-600 hover:text-blue-800">Solid</a>
            <a href="/svelte-example" class="text-blue-600 hover:text-blue-800">Svelte</a>
          </div>
          <p class="text-sm text-gray-600">
            Built with Enhanced MTM Framework - Multi-framework routing and component integration
          </p>
          <p class="text-xs text-gray-500 mt-2">
            © 2024 MTM Framework. Demonstrating modern web development patterns.
          </p>
        </div>
      </div>
    </footer>
  </div>
</template>