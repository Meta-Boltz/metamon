      {/if}
    </main>

    <footer class="footer">
      <p>MTM Framework - Real Client-Side Routing Demo</p>
      <p>State: counter={$counter}, page={$currentPage}</p>
      <p>URL updates automatically with navigation!</p>
    </footer>
  </div>
</template>